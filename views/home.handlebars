<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>interMeet</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- Custom Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="font-awesome/css/font-awesome.min.css" type="text/css">

    <link href='https://fonts.googleapis.com/css?family=Ubuntu:700,400,500' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Hind' rel='stylesheet' type='text/css'>


    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/creative.css" type="text/css">
    <link rel="stylesheet" href="css/sidebar.css" type="text/css">
	<link rel="stylesheet" href="css/callout.css" type="text/css">
	

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>

<body id="page-top">
    <div id="wrapper">
        <div class="overlay"></div>

        {{> sidebar}}
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>
            <nav class="navbar navbar-inverse" id="fixtop">
                <div class="navbar-header">
                    <a class="navbar-brand">Pollings</a>
                    <div class="btn-group pull-right">
                <button type="button" class="btn btn-default dropdown-toggle participants-list-btn" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span><span class="caret"></span></button>
                
                <ul class="dropdown-menu scrollable-menu" role="menu">
                    {{#each user}}
                    <li><a href="#">{{this.firstname}} {{this.lastname}}</a></li>
                    {{/each}} 

                </ul>
                
            </div>
                </div>
                
            </nav>
            
            <div class="wrapper items-wrapper">
                <div class="container card-container">
            <!--  {{#if thisSession.roomError}}
                        <p>Please leave current meeting {{thisSession.code}} first before entering another room by clicking Leave Room on the sidebar</p>
                 
                {{/if}} -->
                    {{#each polling}}
                    {{#unless this.deleted}}
                    <div class="card card-polling bs-callout {{#if active}}bs-callout-success{{else}}bs-callout-danger{{/if}}" id="polling{{id}}">

                        <a id="pollingLink{{id}}" href="/pollingVote/{{id}}">
                            <h3 class="card-header">{{title}}</h3>
                            <div class="card-block">

								<div class="row">
									<div class="col-xs-6">
                                     	<h4 class="card-title">{{date}}</h4>
										<p class="card-text">{{description}}</p>
									</div>
									<div class="col-xs-6">
									<div class="btn-group btn-group-sm pull-right">
										<a id="pollingLink{{id}}" href="/pollingVote/{{id}}"><button type="button" class="btn btn-default btn-polling-result">
											{{#if noVoting}}Result
											{{else}}Vote{{/if}}
											</button></a>
									    {{#unless ../../thisSession.join}}
                                        <a id="delete{{id}}" class="home-delete-polling-button" href="#"><button type="button" class="btn btn-default btn-polling-delete"><span class="glyphicon glyphicon-trash"></span></button></a>
                                        {{/unless}}
									</div>
									</div>
								</div>
                            </div>
                        </a>
                    </div>
                    
                    {{/unless}}
                    {{/each}}

                    {{#unless thisSession.join}}
                    <div class="row container text-center">
                        <a href="/newPolling" class="btn btn-reverse page-scroll">Create new polling</a>
                    </div>
                    {{/unless}}
                </div>
            </div>
        </div>
        <!-- /.modal -->

         {{> modal}}

    </div>

    <!-- /#page-content-wrapper -->
    <!-- /#wrapper -->


    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="js/jquery.easing.min.js"></script>
    <script src="js/jquery.fittext.js"></script>
    <script src="js/wow.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="js/creative.js"></script>
    <script src="js/sidebar.js"></script>
      <script type="text/javascript">
      document.addEventListener('touchmove', function(e) {
        e.preventDefault();
      });
      $('body').on('touchstart', '.items-wrapper', function(e) {
        if (e.currentTarget.scrollTop === 0) {
          e.currentTarget.scrollTop = 1;
        }
        else if (e.currentTarget.scrollHeight === e.currentTarget.scrollTop + e.currentTarget.offsetHeight) {
          e.currentTarget.scrollTop -= 1;
        }
      });
      $('body').on('touchmove', '.items-wrapper', function(e) {
        e.stopPropagation();
      });
    </script>
</body>

</html>