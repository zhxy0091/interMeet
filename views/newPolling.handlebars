<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>interMeet</title>

    <!-- Bootstrap Core CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    <!-- Custom Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="font-awesome/css/font-awesome.min.css" type="text/css">

    <link href='https://fonts.googleapis.com/css?family=Ubuntu:700,400,500' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Hind' rel='stylesheet' type='text/css'>


    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/creative.css" type="text/css">
    <link rel="stylesheet" href="css/sidebar.css" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
</head>

<body id="page-top">
    <div id="wrapper">
        <div class="overlay"></div>

        {{> sidebar}}
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <button type="button" class="hamburger is-closed" data-toggle="offcanvas">
                <span class="hamb-top"></span>
                <span class="hamb-middle"></span>
                <span class="hamb-bottom"></span>
            </button>
            <nav class="navbar navbar-default" id="fixtop">
                <div class="navbar-header">
                    <a class="navbar-brand">New polling</a>
                    
                    <a href="/home"><button type="button" class="btn btn-default top-home-btn pull-right"><span class="glyphicon glyphicon-home"></span></button></a>
                    
                </div>
            </nav>
            <div class="wrapper items-wrapper">
                <div class="container card-container">

                    <div class="new-polling-error-info" id="error-message">
                    </div>

					<form method="POST" id="polling-create-form" name="pollingCreateForm" action="/newPolling">
						<div class="input-group text-section">
                          <div class="polling-text-md create-header">
                            Create new polling
                          </div>
                        </div>
						<div class="form-group has-feedback text-section" id="title-polling-group">
                          <label class="create-label">Title</label>
                          <input type="text" class="form-control" id="polling-create-title" name="pollingTitle" aria-describedby="inputError2Status">
                          <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                          <span id="inputError2Status" class="sr-only">(error)</span>
                        </div>
                        <div class="form-group has-feedback text-section" id="description-polling-group">
                          <label class="create-label">Description (Optional)</label>
                          <input type="text" class="form-control" id="polling-create-description" name="pollingDescription" aria-describedby="inputError2Status">
                          <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                          <span id="inputError2Status" class="sr-only">(error)</span>
                        </div>
                        <div class="form-group has-feedback text-section" id="option0-polling-group">
                          <label class="create-label">Option 1</label>
                          <input type="text" class="form-control" id="polling-create-option0" name="pollingOption0" aria-describedby="inputError2Status">
                          <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                          <span id="inputError2Status" class="sr-only">(error)</span>
                        </div>
                        <div class="form-group has-feedback text-section" id="option1-polling-group">
                          <label class="create-label">Option 2</label>
                          <input type="text" class="form-control" id="polling-create-option1" name="pollingOption1" aria-describedby="inputError2Status">
                          <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
                          <span id="inputError2Status" class="sr-only">(error)</span>
                        </div>
					</form>	
					<a class="polling-text-md" id="polling-create-add" onclick="pollingAdd()">
						<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
					</a>
					<a class="polling-text-md" id="polling-create-minus" onclick="pollingRemove()" hidden>
						<span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
					</a>
					<br>
					
                    <div class="row container text-center">
                        <a href="#" id="polling-submit-button" class="btn btn-reverse page-scroll">Submit</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal -->

         {{> modal}}

    </div>

    <!-- /#page-content-wrapper -->
    <!-- /#wrapper -->


    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="js/jquery.easing.min.js"></script>
    <script src="js/jquery.fittext.js"></script>
    <script src="js/wow.min.js"></script>

    <!-- Custom Theme JavaScript -->
    <script src="js/creative.js"></script>
    <script src="js/sidebar.js"></script>

</body>

</html>